<?xml version="1.0" encoding="UTF-8"?>

<!-- $Id$ -->

<project name="Moved" default="test">

    <!-- Properties -->

    <property name="styledir" value="C:\xampp\php\data\phing\etc"/>

    <!-- Filesets -->

    <fileset id="php-sources" dir=".">
        <include name="index.php"/>
        <include name="admin.php"/>
        <include name="classes/*.php"/>
    </fileset>

    <fileset id="unit-tests" dir="tests/unit">
        <include name="*Test.php"/>
    </fileset>

    <!-- Checks -->

    <target name="sniff">
        <phpcodesniffer standard="PEAR" format="full">
            <fileset refid="php-sources"/>
            <fileset refid="unit-tests"/>
        </phpcodesniffer>
    </target>

    <target name="compat"
            description="checks compatibility with PHP_CompatInfo">
        <exec command="phpcompatinfo analyser:run --alias current" logoutput="true"/>
    </target>

    <!-- Tests -->

    <target name="unit-tests">
        <phpunit haltonerror="true" haltonfailure="true">
            <formatter type="plain" usefile="false"/>
            <batchtest>
                <fileset refid="unit-tests"/>
            </batchtest>
        </phpunit>
    </target>

    <!-- Code coverage -->

    <target name="coverage">
        <exec command="phpunit --configuration coverage.xml" logoutput="true"/>
    </target>

    <!-- Documentation -->

    <target name="php-doc">
        <phpdoc title="Moved_XH Developer Documentation" destdir="doc/php"
                output="HTML:Smarty:HandS" defaultpackagename="Moved"
                defaultcategoryname="CMSimple_XH">
            <fileset refid="php-sources"/>
            <projdocfileset dir=".">
                <include name="README"/>
                <include name="CHANGELOG"/>
            </projdocfileset>
        </phpdoc>
    </target>

</project>
